<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.mobile.UFriend"
      android:versionCode="7"
      android:versionName="1.1.1">
    <application android:label="@string/app_name" android:icon="@drawable/test_app_icon" android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity android:name=".LoginActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".JoinActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".ReplyActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".WriteActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".LocationFriendActivity"/>
        <activity android:name=".SettingActivity"/>
        <activity android:name=".ProfileActivity"/>
        <activity android:name=".UnivListActivity"/>
        <activity android:name=".BoardActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

</manifest>
